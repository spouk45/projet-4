{% extends 'base.html.twig' %}

{% block title %}Ad index{% endblock %}

{% block body %}
    {% include '_banner.html.twig' %}
    <h1>Ad index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Content</th>
            <th>Price</th>
            <th>Image</th>
            <th>Adress</th>
            <th>DateAdded</th>
            <th>City</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for ad in ads %}
            <tr>
                <td>{{ ad.title }}</td>
                <td>{{ ad.adContent }}</td>
                <td>{{ ad.price }}</td>
                <td>{% if ad.imagesLink is not null %}
                        {% for image in ad.imagesLink|slice(1) %}
                        <img class="img-responsive img-fluid" src="{{ images_directory }}{{ image.name }}">
                        {% endfor %}
                    {% endif %}</td>
                <td>{{ ad.adress }}</td>
                <td>{{ ad.dateAdded ? ad.dateAdded|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ad.city }}</td>
                <td>
                    <a href="{{ path('ad_show', {'id': ad.id}) }}">show</a>
                    <a href="{{ path('ad_edit', {'id': ad.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ad_new') }}">Create new</a>
{% endblock %}