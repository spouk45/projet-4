{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="container">
        <h1>Categorie : {{ category.name }}</h1>
        <div class="text-right m-3">
            {{ include('admin/category/_delete_form.html.twig') }}
        </div>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-info m-1" href="{{ path('category_index') }}"><i class="fas fa-angle-double-left mr-1"></i>Retour Ã  la liste</a>
            <a class="btn btn-primary m-1" href="{{ path('category_edit', {'id': category.id}) }}"><i class="far fa-edit mr-1"></i>Modifier</a>
        </div>

    </div>
{% endblock %}