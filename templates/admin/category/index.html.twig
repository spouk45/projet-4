{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="container">
    <h1>Liste des catégories</h1>

    <table class="table text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('category_show', {'id': category.id}) }}"><i class="fas fa-info mr-1"></i>Détails</a>
                    <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}"><i class="far fa-edit mr-1"></i>Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <div class="text-center">
    <a class="btn btn-primary" href="{{ path('category_new') }}"><i class="fas fa-plus mr-1"></i>Ajouter une catégorie</a>
        </div>
    </div>
{% endblock %}